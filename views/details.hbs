  <main>
    <section>
      <article>
        <img src="{{data.user.profile_image.small}}" alt="Photo of {{data.user.name}}">
        <div>
          <h3>{{data.user.name}}</h3>
          <h4>{{data.user.total_photos}} Photos</h4>
        </div>
      </article>
      
      <article>
        <button>Edit</button>
        <button>Download</button>
        <button>Save</button>
      </article>
    </section>

    <section>
      <img src="{{data.urls.full}}" alt="">
    </section>

    <section>
      <article>
        <ul>
          <li>{{data.views}} views</li>
          <li>{{data.downloads}} downloads</li>
          <li>{{data.likes}} likes</li>
        </ul>
      </article>
    </section>

    <section>
      <h2>Also popular:</h2>
      <article>
        {{#each recommended }}
            <a href="/{{this.id}}">
            {{listen this.urls}}
              <img src="{{this.urls.small}}" alt="">
            </a>
        {{/each}}
      </article>
    </section>
    
  </main>
</body>